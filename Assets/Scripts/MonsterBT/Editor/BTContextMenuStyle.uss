/* 右键菜单 */
.context-menu {
    background-color: rgb(40, 40, 40);
    border-radius: 4px;
    border-width: 1px;
    border-color: rgb(60, 60, 60);
    padding: 4px 0;
}

.context-menu-item {
    padding: 6px 16px;
    color: rgb(200, 200, 200);
    font-size: 12px;
}

.context-menu-item:hover {
    background-color: rgb(60, 60, 60);
}

.context-menu-separator {
    height: 1px;
    background-color: rgb(60, 60, 60);
    margin: 4px 8px;
}
